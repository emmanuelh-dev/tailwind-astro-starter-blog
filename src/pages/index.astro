---
import BlogLIst from '../components/BlogLIst.astro';
import siteMetadata from '../data/siteMetadata';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const allPosts = await getCollection('blog');
---

<Layout title='Welcome to Astro.'>
  <div class='items-center 2xl:max-w-7xl max-w-6xl md:px-12 mx-auto lg:px-8 px-4 pt-32'>
    <div class='border-b pb-5 text-balance'>
      <h1 class='text-black text-4xl lg:text-8xl uppercase font-bold'>
        {siteMetadata.title}
      </h1>
      <p class='text-slate-600 mt-4 text-lg'>{siteMetadata.description}</p>
    </div>
  </div>
  <main class='flex flex-col'>
    <BlogLIst />
  </main>
</Layout>
